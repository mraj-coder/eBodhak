# Environment Variables Template
# Copy this file to .env.production for production deployment

# Base URL for the application (used by Vue Router)
# For production, set this to your domain's base path
# Example: If deployed at https://example.com/, use /
# Example: If deployed at https://example.com/app/, use /app/
VITE_BASE_URL=/

# API Base URL
# In development, this uses the Vite proxy (empty string)
# In production, set this to your API server URL
VITE_API_BASE_URL=https://ebodhakapi.factbills.com

# Environment mode
# Options: development, production
NODE_ENV=production